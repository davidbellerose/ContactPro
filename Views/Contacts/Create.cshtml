@model ContactPro.Models.Contact

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center ">
    <div class="col-8 p-3 border border-2 shadow-lg bg-light">
        <form asp-action="Create" asp-controller="Contacts" method="post" enctype="multipart/form-data">
            <div class="row g-3 p-2">
                <h3>Create Contact</h3>
                <div class="col-12 col-lg-4">
                    <div class="square-img-container">
                        <img id="contactImage" class="square-img" src="~/img/DefaultContactImage.png">

                    </div>
                    <div>
                        <input asp-for="ImageFile" class="form-control" accept=".jpg,.png,.jpeg,.gif,.svg,.webp,.tif,.bmp"
                               onchange="document.getElementById('contactImage').src=window.URL.createObjectURL(this.files[0])" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>

                    </div>
                    <div class="col-12 mt-4">
                        <label asp-for="Categories" class="control-label"></label>
                        <select name="CategoryList" class="form-select select-bar" asp-items="ViewBag.CategoryList" multiple></select>
                    </div>
                </div>


                <div class="col-12 col-lg-8">
                    <div class="row">
                        <div class="col-12 col-lg-6">
                            <label asp-for="FirstName" class="control-label required"></label>
                            <input required asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger error-span"></span>
                        </div>
                        <div class="col-12 col-lg-6">
                            <label asp-for="LastName" class="control-label required"></label>
                            <input required asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="col-12 col-lg-6 mt-2">
                            <label asp-for="Email" class="control-label required"></label>
                            <input required asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-12 col-lg-6 mt-2">
                            <label asp-for="PhoneNumber" class="control-label"></label>
                            <input id="phoneNumber" asp-for="PhoneNumber" class="form-control" onblur="formatPhone()" />
                            <span id="phoneValidation" asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="col-12 mt-2">
                            <label asp-for="Address1" class="control-label required"></label>
                            <input required asp-for="Address1" class="form-control" />
                            <span asp-validation-for="Address1" class="text-danger"></span>
                        </div>
                        <div class="col-12 mt-2">
                            <label asp-for="Address2" class="control-label"></label>
                            <input asp-for="Address2" class="form-control" />
                            <span asp-validation-for="Address2" class="text-danger"></span>
                        </div>
                        <div class="col-12 mt-2">
                            <div class="row">
                                <div class="col-12 col-md-6 mt-2">
                                    <label asp-for="City" class="control-label required"></label>
                                    <input required asp-for="City" class="form-control" />
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-md-3 mt-2">
                                    <label asp-for="States" class="control-label required"></label>
                                    <select required asp-for="States" class="form-select" asp-items="ViewBag.StatesList"></select>
                                    <span asp-validation-for="States" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-md-3 mt-2">
                                    <label asp-for="ZipCode" class="control-label required"></label>
                                    <input required asp-for="ZipCode" class="form-control" />
                                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 mt-2">
                            <div class="row">
                                <div class="col-12 col-md-6 mt-2">
                                    <label asp-for="BirthDate" class="control-label"></label>
                                    <input asp-for="BirthDate" class="form-control" />
                                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-md-6 mt-2 d-flex align-items-end justify-content-end">
                                    <a asp-controller="Contacts" asp-action="Index" class="btn rounded-pill btn-primary me-2">Cancel</a>
                                    <button id="saveBtn" type="submit" class="btn rounded-pill btn-primary">Create</button>
                                </div>
                            </div>
                        </div>
                        @*             <div class="fcol-12 d-flex justify-content-end mt-3">
                        <a asp-controller="Contacts" asp-action="Index" class="btn rounded-pill btn-primary me-2">Cancel</a>
                        <button id="saveBtn" type="submit" class="btn rounded-pill btn-primary">Create</button>
                        </div>*@
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
