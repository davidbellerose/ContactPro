@using Microsoft.AspNetCore.Identity
@using ContactPro.Models

@inject SignInManager<AppUser> SignInManager



<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ContactPro</title>

    <!-- Favicons -->
    <link href="~/img/dblogo.svg" rel="icon" />
    <link href="~/img/dblogo.svg" rel="apple-touch-icon" />
    <!--fonts-->
    @*    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>*@
    @*    <link href="https://fonts.googleapis.com/css2?family=Fira+Sans:wght@400;500;600;700;800&family=Roboto:ital,wght@0,100;0,400;0,900;1,100;1,300;1,500;1,900&display=swap"
    rel="stylesheet">
    *@
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />

    <!--Dev Icons-->
    <link href="https://cdn.jsdelivr.net/gh/devicons/devicon@v2.15.1/devicon.min.css" rel="stylesheet">
    <!--Bootstrap icons-->
    @*<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">*@
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/lib/fontawesome/css/fontawesome.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <header>

        <!--  NEW NAV  -->
        <nav class="navbar navbar-expand-md navbar-light fixed-top border-bottom border-light navShadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/symetrak_logo2.png" height=50></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                        aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Contacts" asp-action="Index">Contacts</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Categories" asp-action="Index">Categories</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <main class="content margins">
            @RenderBody()
    </main>
    <div class="js-cookiebar cookiebar">
        <div class="ccard">
            <div class="ccard-inner">
                <div class="ccard-content">
                    <h4 class="ccard-title">Cookie Conset</h4>
                    <p>
                        https://davidbellerose.com uses cookies (and other techniques) to collect information about the use of the
                        platform in order to analyze and improve your experience, for the use of social media, and to ensure that
                        advertisements are relevant to you. See our <a href="https://www.davidbellerose.com/cookie.html" target="_blank" class="link">
                            Cookie Policy
                        </a>, <a href="https://davidbellerose.com/terms.html" target="_blank" class="link">Terms &#38; Conditions</a>,
                        and <a href="https://davidbellerose.com/privacy.html" target="_blank" class="link">Privacy Statement</a> for more information.
                        By continuing on this site and accepting our cookies you agree to the
                        collection of information on this basis by us and by third parties
                        on the platform.
                        <h6>Please customize your cookie settings below.</h6>
                        <hr>
                        <div class="row row-cols-1 row-cols-md-4 row-cols-sm-2 d-flex justify-content-center">
                            <div class="col">
                                <label class="custom-control material-switch">
                                    <input id="basic_chkbx" class="material-switch-control-input" role="switch" type="checkbox" name="items" value="true" disabled checked />
                                    <span class="material-switch-control-indicator switch-basic"></span>
                                    Basic
                                    <!-- <label class="d-flex align-items-center justify-content-center me-2" for="basic_chkbx">Basic</label> -->
                                </label>
                            </div>
                            <div class="col">
                                <!-- <label class="d-flex align-items-center justify-content-center me-2" for="preferences_chkbx">Preferences</label> -->
                                <label class="custom-control material-switch">
                                    <input id="preferences_chkbx" class="material-switch-control-input" type="checkbox" name="items" value="true" checked />
                                    <span class="material-switch-control-indicator"></span>
                                    Preferences
                                </label>
                            </div>
                            <div class="col">
                                <!-- <label class="d-flex align-items-center justify-content-center me-2" for="statistics_chkbx">Statistics</label> -->
                                <label class="custom-control material-switch">
                                    <input id="statistics_chkbx" class="material-switch-control-input" type="checkbox" name="items" value="true" checked />
                                    <span class="material-switch-control-indicator"></span>
                                    Statistics
                                </label>
                            </div>
                            <div class="col">
                                <!-- <label class="d-flex align-items-center justify-content-center me-2" for="marketing_chkbx">Marketing</label> -->
                                <label class="custom-control material-switch">
                                    <input id="marketing_chkbx" class="material-switch-control-input" type="checkbox" name="items" value="true" checked />
                                    <span class="material-switch-control-indicator"></span>
                                    Marketing
                                </label>
                            </div>
                            <!-- <div class="col"> -->
                            <button type="button" class="btn btn-primary d-flex w-100 justify-content-center mt-3" id="cookiebutton" onclick="onCookieButtonClick()">Accept</button>
                            <!-- </div> -->
                        </div>
                </div>
            </div>
        </div>
    </div>
    <div class="back-to-top-wrapper">
        <a href="#top" id="back-to-top-link" class="back-to-top-link" aria-label="Scroll to Top"><i class="bi bi-arrow-up-short"></i></a>
    </div>

    <footer class="footer container-fluid">
        <div class="row align-items-center py-2">

            <div class="col-12 col-md-4 d-flex flex-column order-md-1 order-3">
                <div class="col-12 text-white d-flex justify-content-md-start justify-content-center" style="font-size:0.8rem;">
                    &copy; 2022 David Bellerose All Rights Reserved
                </div>
                <div class="col-12 d-flex justify-content-md-start justify-content-center" style="font-size:0.8rem;">
                    <a class="ms-2" href="https://davidbellerose.com/privacy.html" target="_blank">Privacy</a> &nbsp;
                    <a class="ms-2" href="https://davidbellerose.com/terms.html" target="_blank">Terms & Conditions</a> &nbsp;
                    <a class="ms-2" href="https://davidbellerose.com/cookies.html" target="_blank">Cookie Policy</a> &nbsp;
                    <button class="btn btn-primary js-change-cookie">Change Cookie Preferences</button>
                </div>
            </div>
            <div class="col-12 col-md-4 d-flex justify-content-center order-md-2 order-1">
                <img src="~/img/dblogo.svg" height="25">
            </div>
            <div class="col-12 col-md-4  d-flex justify-content-md-end justify-content-center order-md-3 order-2">
                <a href="https://www.davidbellerose.com" target="_blank" class="me-3 ">
                    <i class="bi bi-briefcase-fill"></i>
                </a>
                <a href="https://www.davidbellerose.com/blog" target="_blank" class="me-3" title="Blog"><i class="bi bi-chat-text-fill"></i></a>
                <a href="https://www.linkedin.com/in/david-bellerose" target="_blank" class="me-3" title="Linked In"><i class="bi bi-linkedin"></i></a>
                <a href="https://twitter.com/DavidEBellerose" target="_blank" class="me-3" title="Twitter"><i class="bi bi-twitter"></i></a>
                <a href="https://github.com/davidbellerose" target="_blank" class="me-3" title="Github"><i class="bi bi-github"></i></a>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
