@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LayoutLanding.cshtml";
}

<div class="row align-items-center space-bottom">
    <div class="col-12 col-md-6 col-lg-5 order-last order-md-first">
        <div class="ms-5">
            <h1 class="heroTitle">
                Keep track of your Network
            </h1>
            <div class="subtitle">
                Organize your contacts into categories for bulk emailing.<br><br>
                <strong>Built with pride using cutting edge tech:</strong>
